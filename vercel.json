{
    "version": 2,
    "builds": [
      { "src": "backend/server.js", "use": "@vercel/node" },
      { "src": "client/package.json", "use": "@vercel/static-build", "config": { "buildCommand": "npm run build", "outputDirectory": "client/build" } }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "backend/server.js" },
      { "src": "/(.*)", "dest": "client/build/$1" }
    ]
  }
  